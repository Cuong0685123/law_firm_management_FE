<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.lawfirm.controller.ClientFormController"
      spacing="10" alignment="CENTER_LEFT">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Thêm Khách Hàng" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Họ tên:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtFullName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Ngày sinh:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpBirthDate" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="CMND/CCCD:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtIdNumber" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Địa chỉ:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtAddress" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Điện thoại:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtPhone" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEmail" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Lưu" onAction="#handleSave" 
                style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
        <Button text="Hủy" onAction="#handleCancel" 
                style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
    </HBox>
</VBox>
