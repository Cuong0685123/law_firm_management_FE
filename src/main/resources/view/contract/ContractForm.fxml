<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mycompany.lawfirm.controller.ContractFormController"
      spacing="10" alignment="CENTER_LEFT" prefWidth="400">
    <padding>
        <Insets top="20" left="20" right="20" bottom="20"/>
    </padding>

    <Label text="Thông Tin Hợp Đồng" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Mã hợp đồng:"/>
    <TextField fx:id="txtCode"/>

    <Label text="Nội dung:"/>
    <TextArea fx:id="txtContent" prefRowCount="3"/>

    <Label text="Ngày ký:"/>
    <DatePicker fx:id="dpSignDate"/>

    <Label text="Phí:"/>
    <TextField fx:id="txtFee"/>

    <Label text="Vụ án liên kết:"/>
    <ComboBox fx:id="cbCase" prefWidth="300"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Lưu" onAction="#handleSave"/>
        <Button text="Hủy" onAction="#handleCancel"/>
    </HBox>
</VBox>
