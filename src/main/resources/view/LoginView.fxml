<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.lawfirm.controller.LoginController">

    <Label text="Đăng nhập" style="-fx-font-size: 18px;"/>
    <TextField fx:id="usernameField" promptText="Tên đăng nhập"/>
    <PasswordField fx:id="passwordField" promptText="Mật khẩu"/>
    <Button text="Đăng nhập" onAction="#handleLogin"/>
    <Hyperlink text="Chưa có tài khoản? Đăng ký" onAction="#goToRegister"/>
    <Label fx:id="messageLabel" textFill="red"/>
</VBox>
